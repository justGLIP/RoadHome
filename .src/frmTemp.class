Public Sub Form_Show()
    frmTemp.x = 10
    GridView1.Columns.Count = 8
    GridView1.Rows.Count = 8
  
End

Public Sub redraw()
  
      Dim i, j As Short
  
    For i = 0 To 7
      For j = 0 To 7
          GridView1[i, j].Text = frmGame.board[i, j]
      Next
    Next
lblPlayer.Text = "Player= " & frmGame.Player
lblBorders1.Text = "Borders 1 pl= " & frmGame.playersBorders[0]
lblBorders2.Text = "Borders 2 pl= " & frmGame.playersBorders[1]
lblBorders3.Text = "Borders 3 pl= " & frmGame.playersBorders[2]
lblBorders4.Text = "Borders 4 pl= " & frmGame.playersBorders[3]
lblFigXold.Text = "FigXold = " & frmGame.FigXold
lblFigYold.text = "FigYold = " & frmGame.FigYold
lblBoard.text = "board[FigXold,FigYold]=" & frmGame.board[frmGame.FigXold, frmGame.FigYold]
End
